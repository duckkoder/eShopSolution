@model eShopSolution.ViewModels.Catalog.Brands.BrandUpdateRequest


@{
    ViewData["Title"] = "Edit Brand";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">DataTable's Brands</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item">Brands</li>
        <li class="breadcrumb-item active">Edit</li>

    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            <a class="btn btn-success" asp-action="Index" asp-controller="Brand">Back To List's Brand</a>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-controller="Brand" method="post" enctype="multipart/form-data">
                <div class="form-floating mb-3">
                    
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating mb-3">
                   
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" cols="5" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <div class="form-group">
                        <label asp-for="ThumbnailImage" class="control-label"></label>
                        <input asp-for="ThumbnailImage" type="file" class="form-control" />
                        <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-4 mb-0">
                    <div class="form-group">
                        <input asp-for="Id" type="hidden"/>
                        <input type="submit" class="btn btn-primary" value="Update" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
