@model eShopSolution.ViewModels.Common.PagedResult<eShopSolution.ViewModels.System.Users.UserViewModel>

@{
    ViewData["Title"] = "Users";
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>
}


<div class="container-fluid px-4">
    <h1 class="mt-4">DataTable's Users</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Users</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1">  </i>
            <a class="btn btn-success" asp-action="Create" asp-controller="User">Create User</a>
        </div>
        <div class="card-body">

            @if (ViewBag.message != null)
            {
                <div id="msgAlert" class="alert alert-success" role="alert">
                    <div class="row">
                        @ViewBag.message
                    </div>
                </div>
            }

            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            UserName
                        </th>
                        <th>
                            FirstName
                        </th>
                        <th>
                            LastName
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            PhoneNumber
                        </th>
                        <th>
                            Dob
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody >
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="no-translate">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td class="no-translate">
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td translate="no">
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td translate="no">
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td translate="no">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td translate="no">
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td translate="no">
                                @Html.DisplayFor(modelItem => item.Dob)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                                @Html.ActionLink("Role Assign", "RoleAssign", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


