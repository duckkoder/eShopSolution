@model eShopSolution.ViewModels.Catalog.Products.ProductDetailViewModel
@{
    ViewData["Title"] = "Details";
}
@section extend {

    <script>
        function selectSize(element) {
            // Bỏ trạng thái "selected" của các phần tử khác
            const allSizes = document.querySelectorAll('.aa-prod-view-size a');
            allSizes.forEach(size => {
                size.classList.remove('selected');
                size.style.backgroundColor = 'transparent'; // Xóa màu nền
                size.style.color = 'black';
                size.style.borderColor = 'black';
            });

            // Thêm trạng thái "selected" vào phần tử được nhấn
            element.classList.add('selected');
            element.style.backgroundColor = 'lightblue'; // Màu xanh biển khi chọn
            element.style.color = 'green';
            element.style.borderColor = 'green';
        }
    </script>
    <script>
        $(document).ready(function () {
            // Gắn sự kiện bằng document để xử lý động
            $(document).on('click', '#calculateButton', function () {
                var formData = $('#predictForm').serialize(); // Lấy dữ liệu từ form

                $.ajax({
                    url: '/Product/CalculatePrediction', // Đường dẫn đến action trong controller
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        // Cập nhật nội dung của Partial View
                        $('#partialContainer').html(response);
                    },
                    error: function () {
                        alert('Error while processing request.');
                    }
                });
            });
        });
    </script>


}

